    <!-- JavaScript -->
    <script>
        // DOM Elements
        const sidebar = document.getElementById('sidebar');
        const menuToggle = document.getElementById('menuToggle');
        const navItems = document.querySelectorAll('.nav-item[data-section]');
        const contentSections = document.querySelectorAll('.content-section');
        const pageTitle = document.getElementById('pageTitle');
        const logoutBtn = document.getElementById('logoutBtn');
        const toastContainer = document.getElementById('toastContainer');
        
        // Stats Elements
        const usersCount = document.getElementById('usersCount');
        const conversionsCount = document.getElementById('conversionsCount');
        const totalUsers = document.getElementById('totalUsers');
        const totalConversions = document.getElementById('totalConversions');
        const todayUploads = document.getElementById('todayUploads');
        
        // Table Elements
        const activityTable = document.getElementById('activityTable');
        const usersTable = document.getElementById('usersTable');
        const conversionsTable = document.getElementById('conversionsTable');
        const adsTable = document.getElementById('adsTable');
        
        // Modal Elements
        const userModal = document.getElementById('userModal');
        const addUserBtn = document.getElementById('addUserBtn');
        const closeUserModal = document.getElementById('closeUserModal');
        const userForm = document.getElementById('userForm');
        
        // Settings Elements
        const settingsTabs = document.querySelectorAll('.nav-item[data-settings]');
        const settingsContent = document.querySelectorAll('.settings-tab');
        const saveGeneralSettings = document.getElementById('saveGeneralSettings');
        
        // Sample Data
        const sampleUsers = [
            { id: 1, name: "John Doe", email: "john@example.com", conversions: 42, status: "active" },
            { id: 2, name: "Jane Smith", email: "jane@example.com", conversions: 28, status: "active" },
            { id: 3, name: "Bob Johnson", email: "bob@example.com", conversions: 15, status: "pending" },
            { id: 4, name: "Alice Brown", email: "alice@example.com", conversions: 37, status: "active" },
            { id: 5, name: "Charlie Wilson", email: "charlie@example.com", conversions: 9, status: "blocked" }
        ];

        const sampleConversions = [
            { id: 1001, user: "John Doe", original: "image1.jpg", processed: "image1_processed.png", time: "10:30 AM" },
            { id: 1002, user: "Jane Smith", original: "image2.jpg", processed: "image2_processed.png", time: "11:15 AM" },
            { id: 1003, user: "Bob Johnson", original: "image3.jpg", processed: "image3_processed.png", time: "12:45 PM" },
            { id: 1004, user: "Alice Brown", original: "image4.jpg", processed: "image4_processed.png", time: "1:30 PM" },
            { id: 1005, user: "Charlie Wilson", original: "image5.jpg", processed: "image5_processed.png", time: "2:15 PM" }
        ];

        const sampleActivity = [
            { user: "John Doe", action: "Uploaded image", file: "profile.jpg", time: "2 mins ago", status: "success" },
            { user: "Jane Smith", action: "Downloaded result", file: "product.png", time: "5 mins ago", status: "success" },
            { user: "Admin", action: "Updated settings", file: "-", time: "10 mins ago", status: "info" },
            { user: "Bob Johnson", action: "Failed upload", file: "large_image.jpg", time: "15 mins ago", status: "error" },
            { user: "Alice Brown", action: "Shared result", file: "artwork.png", time: "25 mins ago", status: "success" }
        ];

        const sampleAds = [
            { slot: "Header Banner", type: "Banner", impressions: "12,450", clicks: "245", revenue: "$124.50", status: "active" },
            { slot: "Sidebar Ad", type: "Rectangle", impressions: "8,920", clicks: "178", revenue: "$89.20", status: "active" },
            { slot: "Popup Ad", type: "Popup", impressions: "5,670", clicks: "85", revenue: "$56.70", status: "paused" },
            { slot: "Footer Ad", type: "Banner", impressions: "3,450", clicks: "52", revenue: "$34.50", status: "active" }
        ];

        // Initialize
        function init() {
            updateStats();
            loadUsers();
            loadConversions();
            loadActivity();
            loadAds();
            setupEventListeners();
            initCharts();
            
            // Check if user is logged in
            if (!localStorage.getItem('adminLoggedIn')) {
                // Redirect to login (you can implement this)
                showToast('Please login first', 'error');
                setTimeout(() => {
                    window.location.href = 'login.html'; // Create login page
                }, 1500);
            }
        }

        // Set up event listeners
        function setupEventListeners() {
            // Navigation
            navItems.forEach(item => {
                item.addEventListener('click', (e) => {
                    e.preventDefault();
                    const section = item.getAttribute('data-section');
                    switchSection(section);
                    
                    // Update active states
                    navItems.forEach(nav => nav.classList.remove('active'));
                    item.classList.add('active');
                    
                    // Update page title
                    pageTitle.textContent = item.querySelector('.nav-text').textContent;
                });
            });

            // Mobile menu toggle
            menuToggle.addEventListener('click', () => {
                sidebar.classList.toggle('active');
            });

            // Settings tabs
            settingsTabs.forEach(tab => {
                tab.addEventListener('click', (e) => {
                    e.preventDefault();
                    const tabId = tab.getAttribute('data-settings');
                    
                    settingsTabs.forEach(t => t.classList.remove('active'));
                    settingsContent.forEach(content => content.classList.remove('active'));
                    
                    tab.classList.add('active');
                    document.getElementById(tabId).classList.add('active');
                });
            });

            // Logout
            logoutBtn.addEventListener('click', () => {
                localStorage.removeItem('adminLoggedIn');
                showToast('Logged out successfully', 'success');
                setTimeout(() => {
                    window.location.href = 'index.html'; // Redirect to main site
                }, 1500);
            });

            // User modal
            addUserBtn.addEventListener('click', () => {
                userModal.classList.add('active');
            });

            closeUserModal.addEventListener('click', () => {
                userModal.classList.remove('active');
            });

            // Close modal when clicking outside
            userModal.addEventListener('click', (e) => {
                if (e.target === userModal) {
                    userModal.classList.remove('active');
                }
            });

            // User form submission
            userForm.addEventListener('submit', (e) => {
                e.preventDefault();
                addNewUser();
            });

            // Save settings
            saveGeneralSettings.addEventListener('click', saveSettings);
        }

        // Switch between sections
        function switchSection(sectionId) {
            contentSections.forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
            
            // Update charts when switching to analytics
            if (sectionId === 'analytics') {
                setTimeout(initCharts, 100);
            }
        }

        // Update stats
        function updateStats() {
            const totalUsersCount = sampleUsers.length;
            const totalConversionsCount = sampleConversions.length;
            const todayUploadsCount = Math.floor(Math.random() * 50) + 100;
            
            usersCount.textContent = totalUsersCount;
            conversionsCount.textContent = totalConversionsCount;
            totalUsers.textContent = totalUsersCount.toLocaleString();
            totalConversions.textContent = totalConversionsCount.toLocaleString();
            todayUploads.textContent = todayUploadsCount;
        }

        // Load users table
        function loadUsers() {
            usersTable.innerHTML = '';
            sampleUsers.forEach(user => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${user.id}</td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div class="user-avatar" style="background: linear-gradient(135deg, var(--primary), var(--accent));"></div>
                            <div>${user.name}</div>
                        </div>
                    </td>
                    <td>${user.email}</td>
                    <td>${user.conversions}</td>
                    <td>
                        <span class="status-badge status-${user.status}">
                            ${user.status.charAt(0).toUpperCase() + user.status.slice(1)}
                        </span>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn" onclick="editUser(${user.id})">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn" onclick="deleteUser(${user.id})">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                `;
                usersTable.appendChild(row);
            });
        }

        // Load conversions table
        function loadConversions() {
            conversionsTable.innerHTML = '';
            sampleConversions.forEach(conversion => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${conversion.id}</td>
                    <td>${conversion.user}</td>
                    <td>${conversion.original}</td>
                    <td>${conversion.processed}</td>
                    <td>${conversion.time}</td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn" onclick="viewConversion(${conversion.id})">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="action-btn" onclick="downloadConversion(${conversion.id})">
                                <i class="fas fa-download"></i>
                            </button>
                        </div>
                    </td>
                `;
                conversionsTable.appendChild(row);
            });
        }

        // Load activity table
        function loadActivity() {
            activityTable.innerHTML = '';
            sampleActivity.forEach(activity => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${activity.user}</td>
                    <td>${activity.action}</td>
                    <td>${activity.file}</td>
                    <td>${activity.time}</td>
                    <td>
                        <span class="status-badge status-${activity.status}">
                            ${activity.status.charAt(0).toUpperCase() + activity.status.slice(1)}
                        </span>
                    </td>
                `;
                activityTable.appendChild(row);
            });
        }

        // Load ads table
        function loadAds() {
            adsTable.innerHTML = '';
            sampleAds.forEach(ad => {
                const row = document.createElement('tr');
                const statusClass = ad.status === 'active' ? 'status-active' : 
                                 ad.status === 'paused' ? 'status-pending' : 'status-blocked';
                row.innerHTML = `
                    <td>${ad.slot}</td>
                    <td>${ad.type}</td>
                    <td>${ad.impressions}</td>
                    <td>${ad.clicks}</td>
                    <td>${ad.revenue}</td>
                    <td>
                        <span class="status-badge ${statusClass}">
                            ${ad.status.charAt(0).toUpperCase() + ad.status.slice(1)}
                        </span>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn" onclick="toggleAd('${ad.slot}')">
                                <i class="fas fa-power-off"></i>
                            </button>
                            <button class="action-btn" onclick="editAd('${ad.slot}')">
                                <i class="fas fa-edit"></i>
                            </button>
                        </div>
                    </td>
                `;
                adsTable.appendChild(row);
            });
        }

        // Add new user
        function addNewUser() {
            const name = document.getElementById('userName').value;
            const email = document.getElementById('userEmail').value;
            
            const newUser = {
                id: sampleUsers.length + 1,
                name: name,
                email: email,
                conversions: 0,
                status: "active"
            };
            
            sampleUsers.push(newUser);
            loadUsers();
            updateStats();
            userModal.classList.remove('active');
            userForm.reset();
            
            showToast(`User ${name} added successfully!`, 'success');
        }

        // Edit user
        window.editUser = function(id) {
            const user = sampleUsers.find(u => u.id === id);
            showToast(`Editing user: ${user.name}`, 'info');
            // Implement edit modal
        }

        // Delete user
        window.deleteUser = function(id) {
            if (confirm('Are you sure you want to delete this user?')) {
                const index = sampleUsers.findIndex(u => u.id === id);
                if (index !== -1) {
                    sampleUsers.splice(index, 1);
                    loadUsers();
                    updateStats();
                    showToast('User deleted successfully!', 'success');
                }
            }
        }

        // View conversion
        window.viewConversion = function(id) {
            showToast(`Viewing conversion #${id}`, 'info');
            // Implement view conversion
        }

        // Download conversion
        window.downloadConversion = function(id) {
            showToast(`Downloading conversion #${id}`, 'success');
            // Implement download
        }

        // Toggle ad status
        window.toggleAd = function(slot) {
            showToast(`Toggled ad: ${slot}`, 'info');
            // Implement toggle ad
        }

        // Edit ad
        window.editAd = function(slot) {
            showToast(`Editing ad: ${slot}`, 'info');
            // Implement edit ad
        }

        // Save settings
        function saveSettings() {
            const siteName = document.getElementById('siteName').value;
            const maxFileSize = document.getElementById('maxFileSize').value;
            const maintenanceMode = document.getElementById('maintenanceMode').checked;
            
            localStorage.setItem('siteName', siteName);
            localStorage.setItem('maxFileSize', maxFileSize);
            localStorage.setItem('maintenanceMode', maintenanceMode);
            
            showToast('Settings saved successfully!', 'success');
        }

        // Initialize charts
        function initCharts() {
            // Conversions Chart
            const conversionsCtx = document.getElementById('conversionsChartCanvas').getContext('2d');
            new Chart(conversionsCtx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Conversions',
                        data: [65, 59, 80, 81, 56, 55, 40],
                        borderColor: '#00f3ff',
                        backgroundColor: 'rgba(0, 243, 255, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: 'rgba(255, 255, 255, 0.8)'
                            }
                        }
                    },
                    scales: {
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.6)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.6)'
                            }
                        }
                    }
                }
            });

            // Users Chart
            const usersCtx = document.getElementById('usersChartCanvas').getContext('2d');
            new Chart(usersCtx, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'New Users',
                        data: [120, 190, 300, 500, 200, 300],
                        backgroundColor: '#ff00ff',
                        borderColor: '#ff00ff',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: 'rgba(255, 255, 255, 0.8)'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.6)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.6)'
                            }
                        }
                    }
                }
            });

            // Traffic Chart
            const trafficCtx = document.getElementById('trafficChartCanvas').getContext('2d');
            new Chart(trafficCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Direct', 'Social', 'Search', 'Referral'],
                    datasets: [{
                        data: [30, 25, 35, 10],
                        backgroundColor: [
                            '#00f3ff',
                            '#ff00ff',
                            '#00ff9d',
                            '#ffa500'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: 'rgba(255, 255, 255, 0.8)'
                            }
                        }
                    }
                }
            });
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <div class="toast-header">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                    <div class="toast-title">${type.charAt(0).toUpperCase() + type.slice(1)}</div>
                </div>
                <div class="toast-message">${message}</div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                toast.style.animation = 'slideIn 0.5s reverse forwards';
                setTimeout(() => toast.remove(), 500);
            }, 5000);
        }

        // Auto login for demo (remove in production)
        localStorage.setItem('adminLoggedIn', 'true');

        // Initialize the admin panel
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
